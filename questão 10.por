programa
{
	
	funcao inicio()
	{
		real r
		real a = 3.14
		escreva("Digite aqui o raio do seu círculo: ")
		leia (r)
		a = 3.14 * (r*r)
		escreva("Diante dos fatores calculados e apresentados, é implicante dizer que a área de seu círculo é: ", a)
	}
}
